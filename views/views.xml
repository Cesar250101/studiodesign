<odoo>
  <data>
    <!-- Inherit Form View to Modify it -->
    <record id="studiodesign.view_picking_form" model="ir.ui.view">
        <field name="name">studio.design.view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='origin']" position="after">
                <field name="project_id" attrs="{'invisible': [('picking_type_id', '!=', 20)], 'required': [('picking_type_id', '=', 20)]}"/>
                <field name="user_id" attrs="{'invisible': [('picking_type_id', '!=', 20)], 'required': [('picking_type_id', '=', 20)]}"/>
                <field name="partner_id" value="1" attrs="{'invisible': [('picking_type_code', '=', 'internal')]}"/>
            </xpath>

        </field>
    </record>
  </data>
</odoo>